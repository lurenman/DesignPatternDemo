<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">
        <Button
            android:id="@+id/bt_singleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="单例模式" />

        <Button
            android:id="@+id/bt_observer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="观察者模式" />
        <Button
            android:id="@+id/bt_factroy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="工厂模式" />
        <Button
            android:id="@+id/bt_build"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Build模式" />
        <Button
            android:id="@+id/bt_strategy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="策略模式" />
        <Button
            android:id="@+id/bt_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="适配器模式" />
        <Button
            android:id="@+id/bt_command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="命令模式" />
        <Button
            android:id="@+id/bt_decorator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="装饰者模式" />
        <Button
            android:id="@+id/bt_facade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="外观模式" />
        <Button
            android:id="@+id/bt_template_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="模板方法模式" />
        <Button
            android:id="@+id/bt_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="状态模式略" />

    </LinearLayout>

</ScrollView>